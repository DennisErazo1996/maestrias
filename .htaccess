#forzar SSL
RewriteEngine On 
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://maestrias.unag.edu.hn/$1 [R,L]

#personalizar errores
ErrorDocument 403 https://maestrias.unag.edu.hn/403
ErrorDocument 404 https://maestrias.unag.edu.hn/404

#ocultar extensiones
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

#evita la navegacion por directorios
Options All -Indexes